<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
        http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>WhoAmI Web Application</display-name>

    <servlet>
        <servlet-name>whoami-servlet</servlet-name>
        <servlet-class>org.dnt.whoami.WhoamiServlet</servlet-class>
        <init-param>
            <param-name>daoHost</param-name>
            <param-value>localhost</param-value>
        </init-param>
        <init-param>
            <param-name>daoPort</param-name>
            <param-value>27017</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet>
        <servlet-name>whoami-resources</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>org.dnt.whoami.rest</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

<!--
    <servlet-mapping>
        <servlet-name>whoami-servlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
-->

    <servlet-mapping>
        <servlet-name>whoami-resources</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
</web-app>
